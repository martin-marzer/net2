<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Aseguradora</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/titulares">
                <span class="oi oi-person" aria-hidden="true"></span> Listado Titulares
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/vehiculos" style="padding-left: 0.8rem;">
                <img  src="/images/autito.png" style="filter: invert(1);width: 1.5rem;margin-right: 0.5rem;">
                <span aria-hidden="true"></span> Listado Vehiculos
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/polizas">
                <span class="oi oi-clipboard" aria-hidden="true"></span> Listado Polizas
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/siniestros">
                <span class="oi oi-warning" aria-hidden="true"></span> Listado Siniestros
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/terceros">
                <span class="oi oi-people" aria-hidden="true"></span> Listado Terceros
            </NavLink>
        </div>


    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
